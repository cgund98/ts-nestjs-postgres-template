# Local development environment variables
# Copy this file to .env.local and update values as needed for your local setup
# .env.local is gitignored and should contain your local non-secret configuration

# Application
ENVIRONMENT=development
LOG_LEVEL=info

# Database (matches docker-compose.yml defaults)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=app

# AWS / LocalStack
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566
USE_LOCALSTACK=true

# Event Topic ARN (set after running setup_localstack.sh)
DEFAULT_EVENT_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:events-topic

# Event Queue URLs (set after running setup_localstack.sh)
EVENT_QUEUE_URL_USER_CREATED=http://localhost:4566/000000000000/user-created
EVENT_QUEUE_URL_USER_UPDATED=http://localhost:4566/000000000000/user-updated
EVENT_QUEUE_URL_INVOICE_CREATED=http://localhost:4566/000000000000/invoice-created
EVENT_QUEUE_URL_INVOICE_PAYMENT_REQUESTED=http://localhost:4566/000000000000/invoice-payment-requested
EVENT_QUEUE_URL_INVOICE_PAID=http://localhost:4566/000000000000/invoice-paid
