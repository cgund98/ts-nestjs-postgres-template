{
  "name": "nestjs-postgres-template",
  "version": "0.1.0",
  "description": "NestJS PostgreSQL template with 3-tier architecture",
  "main": "dist/entry/api/main.js",
  "scripts": {
    "build": "nest build && tsc-alias",
    "start:dev": "dotenv -e .env.local -- nest start --watch --entryFile entry/api/main",
    "start:debug": "dotenv -e .env.local -- nest start --debug --watch",
    "start:prod": "node dist/entry/api/main.js",
    "dev:worker": "dotenv -e .env.local -- tsx watch entry/worker/main.ts | pino-pretty",
    "start": "node dist/entry/api/main.js",
    "start:worker": "node dist/entry/worker/main.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check \"**/*.{ts,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist node_modules/.cache",
    "db:generate": "kysely-codegen --config-file kysely-codegen.config.ts"
  },
  "keywords": [
    "nestjs",
    "postgresql",
    "typescript",
    "template",
    "ddd",
    "event-driven"
  ],
  "author": "Callum Gundlach <gundlachcallum@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-sns": "^3.962.0",
    "@aws-sdk/client-sqs": "^3.962.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-fastify": "^11.1.11",
    "@nestjs/swagger": "^11.2.4",
    "@sinclair/typebox": "^0.34.46",
    "ajv": "^8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "fastify": "^5.6.2",
    "kysely": "^0.28.9",
    "nestjs-zod": "^5.1.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.14",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jiti": "^2.6.1",
    "kysely-codegen": "^0.19.0",
    "nodemon": "^3.1.11",
    "pino-pretty": "^12.1.0",
    "prettier": "^3.7.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
